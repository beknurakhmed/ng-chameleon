{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "analytics": false,
    "packageManager": "npm",
    "schematicCollections": ["ng-chameleon"]
  },
  "newProjectRoot": "packages",
  "projects": {
    "ng-chameleon": {
      "projectType": "library",
      "root": "packages/core",
      "sourceRoot": "packages/core/src",
      "prefix": "ch",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "packages/core/ng-package.json",
            "tsConfig": "packages/core/tsconfig.lib.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/core/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "packages/core/src/test.ts",
            "tsConfig": "packages/core/tsconfig.spec.json",
            "karmaConfig": "packages/core/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "packages/core/**/*.ts",
              "packages/core/**/*.html"
            ]
          }
        }
      }
    },
    "playground": {
      "projectType": "application",
      "root": "apps/playground",
      "sourceRoot": "apps/playground/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser-esbuild",
          "options": {
            "outputPath": "dist/playground",
            "index": "apps/playground/src/index.html",
            "main": "apps/playground/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "apps/playground/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "apps/playground/src/assets",
                "output": "/assets"
              }
            ],
            "styles": [
              "packages/core/src/lib/themes/base.css",
              "packages/core/src/lib/themes/shadcn.css",
              "packages/core/src/lib/themes/chakra.css",
              "packages/core/src/lib/themes/material.css",
              "packages/core/src/lib/themes/antd.css",
              "apps/playground/src/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": ["packages/core/src/lib"]
            },
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kb",
                  "maximumError": "8kb"
                }
              ],
              "outputHashing": "all",
              "optimization": true
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "playground:build:production"
            },
            "development": {
              "buildTarget": "playground:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "playground:build"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "apps/playground/**/*.ts",
              "apps/playground/**/*.html"
            ]
          }
        }
      }
    }
  }
}
